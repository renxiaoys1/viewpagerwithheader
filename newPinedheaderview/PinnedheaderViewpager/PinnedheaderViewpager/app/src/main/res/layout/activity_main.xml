<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">


    <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    <LinearLayout android:id="@+id/view_header"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/header_height"
                  android:background="@color/color_ff70d0c1"
                  android:orientation="vertical">

        <TextView android:id="@+id/first_line"
                  android:textSize="24sp"
                  android:text="第一 这是一个demo!"
                  android:layout_width="match_parent"
                  android:padding="22dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"/>



        <com.baidu.pinnedheaderviewpager.headtab.HorizontalSlidingTabLayout android:id="@+id/tab_view"
                                                                            android:layout_height="@dimen/sliding_tab_height"
                                                                            android:layout_width="match_parent"
                                                                            android:layout_weight="0"
                                                                            android:background="@android:color/white">

        </com.baidu.pinnedheaderviewpager.headtab.HorizontalSlidingTabLayout>


    </LinearLayout>


</RelativeLayout>
